<!-- 投稿削除後のみ表示 -->
<p class="destroyed-text">
	<%= flash[:notice] %>
</p>

<div class="row">
	<div class="col-md-3">
		<!-- ユーザー情報 -->
		<%= render 'users/user-info', user: @user %>
		<!-- 新規投稿フォーム -->
		<h4 class="new-book-headline">New book</h4>
		<%= render 'books/book-form', book: @book, btn_name: "Create Book" %>
	</div>

	<div class="col-md-9">
		<!-- 投稿一覧 -->
		<%= render 'books/book-list', books: @books %>
	</div>
</div>