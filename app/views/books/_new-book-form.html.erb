
<h4 class="new-book-headline">New book</h4>
<%= form_for(book) do |f| %>

	<div class="form-group">
		<p>Title</p>
		<%= f.text_field :title, class: "form-control" %>
	</div>

	<div class="form-group">
		<p>Body</p>
		<%= f.text_area :body, class: "form-control"  %>
	</div>

		<%= f.submit "#{btn_name}", class: "btn btn-primary btn-block" %>
	</div>
<% end %>
